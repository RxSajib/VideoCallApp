<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/signupbuttonID"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:text="Sign Up"
        android:textSize="25dp"
        android:typeface="sans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/LoginTextID"
        android:layout_below="@id/signupbuttonID"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Please sign up enter the app"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/LoginTextID"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginRight="15dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/GoogleButtonID"
                android:elevation="3dp"
                android:layout_width="120dp"
                android:layout_height="45dp">

                <RelativeLayout

                    android:background="@drawable/google_button_design"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:src="@drawable/google"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp">

                    </ImageView>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="15dp"
                android:elevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_toRightOf="@+id/GoogleButtonID"
                android:layout_width="120dp"
                android:layout_height="45dp">

                <RelativeLayout

                    android:background="@drawable/facebook_button_design"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/facebook"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp">

                    </ImageView>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_above="@+id/LoginEmialID"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_centerVertical="true"
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:background="#747474"
            android:layout_toRightOf="@+id/OR"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp">
        </View>

        <View
            android:layout_toLeftOf="@+id/OR"
            android:layout_centerVertical="true"
            android:id="@+id/two"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:background="#747474"
            android:layout_height="1dp">
        </View>

        <TextView
            android:id="@+id/OR"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="OR"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <EditText
        android:id="@+id/LoginEmialID"
        android:layout_above="@+id/LoginPasswordID"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="12dp"
        android:textSize="16dp"
        android:drawableLeft="@drawable/email_icon"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:background="@drawable/edittext_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/LoginPasswordID"
        android:layout_above="@+id/PrivatePolicyCheackbxID"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/password_icon"
        android:background="@drawable/edittext_design"
        android:padding="12dp"
        android:hint="Enter Password"
        android:textSize="16dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <CheckBox
        android:id="@+id/PrivatePolicyCheackbxID"
        android:layout_above="@+id/SignUpButtonID"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:backgroundTint="#ff22"
        android:buttonTint="#ff22"
        android:text="I agree with Private Policy"
        android:layout_height="wrap_content">

    </CheckBox>

    <Button
        android:elevation="-1dp"
        android:id="@+id/SignUpButtonID"
        android:text="Sign Up"
        android:layout_above="@+id/ButtonLayout"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:background="@drawable/hide_button_design"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="45dp">

    </Button>


    <RelativeLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alr"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:text="Don't have a account ?"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_toRightOf="@+id/alr"
            android:layout_width="wrap_content"
            android:text=" Login"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16dp"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

</RelativeLayout>